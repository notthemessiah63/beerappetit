<container class='siz20l'>
  <h2>Beer Styles</h2>

<!-- ===== Search Field to restrict list -->
  <%= form_for beer_styles_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search %>
      <%= submit_tag "search" %>
    </p>
  <% end %>

<!-- ====== end of search field ======= -->

<button class="beer-style-entry-form" rel='external'>New Beer Style</button>
  <div class="new-beer-style hidden">
    <ul class="ul_list">
      <%= form_for @beer_style do |form| %>
        
        <li><%= form.label :style, :class => 'input_label' %></li>
        <li><%= form.text_field :style, :class => 'input1' %></li>

        <li><%= form.label :style_note, :class => 'input_label' %></li>
        <li><%= form.text_area :style_note, :class => 'input2' %></li>

          <li>
            <%= form.label(:beer_flavour_val, "1 ") %>
            <%= form.radio_button(:beer_flavour_val, 1) %>
            <%= form.label(:beer_flavour_val, " Delicate") %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "2 ") %>
            <%= form.radio_button(:beer_flavour_val, 2) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "3 ") %>
            <%= form.radio_button(:beer_flavour_val, 3) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "4 ") %>
            <%= form.radio_button(:beer_flavour_val, 4) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "5 ") %>
            <%= form.radio_button(:beer_flavour_val, 5) %><%= form.label(:beer_flavour_val, " Strong") %>
          </li>

        <li><%= form.submit 'Submit' , :class => 'submit_it' %></li>

      <% end %>
    </ul>
  </div>
</container>
<container class='siz30l'>
  <div>
    <% @beer_styles.order(:style).each do |beer_style| %>
      <div class="list-group-item">
        <ul class="ul_list">
          <li><%= link_to(beer_style.style, beer_style_path(beer_style.id), :class => 'link_line')%></li>
        </ul>
      </div>
    <% end %>
  </div>
</container>
    