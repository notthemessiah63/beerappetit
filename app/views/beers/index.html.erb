<container class='siz20l'>
  <h2>Beers</h2>

  <!-- ===== Search Field to restrict list -->
  <%= form_for beers_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search %>
      <%= submit_tag "search" %>
    </p>
  <% end %>

  <!-- ====== end of search field ======= -->

  <button class="beer-entry-form" rel='external'>New Beer</button>
  <div class="new-beer hidden">
    <ul class="ul_list">
      <%= form_for @beer do |form| %>
        
        <li><%= form.label :name, :class => 'input_label' %></li>
        <li><%= form.text_field :name, :class => 'input1' %></li>

        <li><%= form.label :brewer, :class => 'input_label' %></li>
        <li><%= form.text_field :brewer, :class => 'input1' %></li>

        <li><%= form.label :beer_note, :class => 'input_label' %></li>
        <li><%= form.text_area :beer_note, :class => 'input1' %></li>

        <li><%= form.label :beer_style_id, :class => 'input_label' %></li>
        <li><%=form.collection_select(:beer_style_id, BeerStyle.all, :id, :style, {:prompt=>true}, {:class=>'input1'}) %></li>

        <li><%= form.label :image, :class => 'input_label' %></li>
        <li><%= form.text_field :image, :class => 'input1' %></li>

        <li>Select Flavour strength</li>
          <li>
            <%= form.label(:beer_flavour_val, "1 ") %>
            <%= form.radio_button(:beer_flavour_val, 1) %>
            <%= form.label(:beer_flavour_val, " Delicate") %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "2 ") %>
            <%= form.radio_button(:beer_flavour_val, 2) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "3 ") %>
            <%= form.radio_button(:beer_flavour_val, 3) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "4 ") %>
            <%= form.radio_button(:beer_flavour_val, 4) %>
          </li>
          <li>
            <%= form.label(:beer_flavour_val, "5 ") %>
            <%= form.radio_button(:beer_flavour_val, 5) %><%= form.label(:beer_flavour_val, " Strong") %>
          </li>

        <li><%= form.submit 'Submit' , :class => 'submit_it' %></li>

      <% end %>
    </ul>
  </div>
</container>
<container class='siz30l'>
  <div>
    <% @beers.order(:name).each do |beer| %>
      <div class="list-group-item">
        <ul class="ul_list">
          <li><%= link_to(beer.name, beer_path(beer.id), :class => 'link_line')%></li>
        </ul>
      </div>
    <% end %>
  </div>
</container>