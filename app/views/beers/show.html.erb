<container class='siz20l'>
  <h2>Show Beers</h2>
  <div>
    <p>Brewery: <%= @beer.brewer %></p>
    <p>Name   : <%= @beer.name %></p>
    <p><%= image_tag @beer.image , :class => "beer_img"%></p>
    <p>ABV    : <%= @beer.abv %></p>
    <p>Style  : <%= @beer.beer_style.style if @beer.beer_style%></p>
    <p>Tasting notes: <%= @beer.beer_note %></p>
  </div>
</container>

