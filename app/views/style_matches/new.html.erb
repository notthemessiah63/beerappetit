<h2 class='page_hdr'>Administration -Style Matches</h2>
<container class='siz20l'>
  <ul class="ul_list">
    <%= form_for @style_match do |form| %>
    
    <li><%= form.label :food_style_id, :class => 'input_label' %></li>
    <li><%=form.collection_select(:food_style_id, FoodStyle.all, :id, :style, {:prompt=>true}, {:class=>'form-select-f'}) %></li>

    <li><%= form.label :beer_style_id, :class => 'input_label' %></li>
    <li><%=form.collection_select(:beer_style_id, BeerStyle.all, :id, :style, {:prompt=>true}, {:class=>'form-select-b'}) %></li>

    <li><%= form.label :match_note, :class => 'input_label' %></li>
    <li><%= form.text_area :match_note, :class => 'input2' %></li>

    <li><%= form.submit 'Submit', :class => 'submit_it' %></li>
  <% end %>
  </ul>
</container>